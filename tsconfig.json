{
  "compilerOptions": {
    "lib": [
      "ESNext",
      "dom"
    ],
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "./out",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    /*
      Strict mode
    */
    "strict": false,
  },
  "exclude": [
    "node_modules"
  ]
}
